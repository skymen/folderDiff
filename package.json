{
  "name": "folder-diff",
  "version": "1.0.0",
  "description": "A minimal Electron app to compare two folders",
  "main": "main.js",
  "author": "Ossama 'skymen' Jouini",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.folderdiff.app",
    "productName": "Folder Diff",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "styles.css"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "build/icons",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.4.0",
    "electron-reloader": "^1.2.3",
    "jest": "^30.2.0",
    "png2icons": "^2.0.1"
  },
  "dependencies": {
    "diff": "^5.1.0"
  }
}
